<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.vvv.singers.DetailActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ivBig"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genres"
            android:id="@+id/tvDGenres"
            android:layout_below="@+id/ivBig"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Creation"
            android:id="@+id/tvDCreation"
            android:layout_below="@+id/tvDGenres"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Биография"
            android:id="@+id/tvDDescrLabel"
            android:layout_below="@+id/tvDCreation"
            android:layout_alignParentStart="true"
            android:paddingTop="30dp"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/tvDDescription"
            android:layout_below="@+id/tvDDescrLabel"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:lineSpacingMultiplier="1.1"
            android:paddingTop="5dp" />

    </RelativeLayout>

</ScrollView>
